generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource postgresql {
  provider = "postgresql"
}

model UserNest {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  roles  Roles[] @default([USER])
  password  String?
  deleted Boolean @default(false)
  tasks TaskNest[]
  refreshToken String?
}

enum Roles {
  USER
  ADMIN
}

model TaskNest {
  id    Int     @id @default(autoincrement())
  userId Int
  user UserNest @relation(fields: [userId], references: [id])
  created DateTime @default(now())
  updated DateTime @default(now())
  title String
  text String
}