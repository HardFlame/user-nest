generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource postgresql {
  provider = "postgresql"
}

model UserNest {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  roles  Roles[] @default([USER])
  password  String?
  deleted Boolean @default(false)
  tasks TaskNest[]
  chats ChatNest[]
  refreshToken String?
}

enum Roles {
  USER
  ADMIN
}

model TaskNest {
  id    Int     @id @default(autoincrement())
  userId Int
  user UserNest @relation(fields: [userId], references: [id])
  created DateTime @default(now())
  updated DateTime @default(now())
  title String
  text String
}

model ChatNest {
  id    Int     @id @default(autoincrement())
  userId Int
  user UserNest @relation(fields: [userId], references: [id])
  message String
  room Room @default(DEFAULT)
  sendedTo Int?
  created DateTime @default(now())
}

enum Room {
  GLOBAL
  DEFAULT
  ROOM1
  ROOM2
  WHISPER
}