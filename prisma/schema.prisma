generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource postgresql {
  provider = "postgresql"
}

model UserNest {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  roles  Roles[] @default([USER])
  password  String?
  deleted Boolean @default(false)
}

enum Roles {
  USER
  ADMIN
}